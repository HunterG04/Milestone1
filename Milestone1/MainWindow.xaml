<Window x:Class="Milestone1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Milestone1"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="400">
    <Grid Margin="0,0,2,0">
        <ComboBox x:Name="comboState" SelectedValuePath="state" HorizontalAlignment="Left" Margin="128,39,0,0" VerticalAlignment="Top" Width="138" SelectionChanged="comboState_SelectionChanged"/>
        <ComboBox x:Name="comboCity" SelectedValuePath="city" HorizontalAlignment="Left" Margin="128,66,0,0" VerticalAlignment="Top" Width="138" SelectionChanged="comboCity_SelectionChanged"/>
        <Label x:Name="labelState" Content="State" HorizontalAlignment="Left" Margin="78,39,0,0" VerticalAlignment="Top" Height="22" FontSize="10" RenderTransformOrigin="1.521,0.66"/>
        <Label x:Name="labelCity" Content="City" HorizontalAlignment="Left" Margin="78,66,0,0" VerticalAlignment="Top" Height="22" FontSize="10"/>
        <DataGrid x:Name="dataGridBusiness" Margin="24,129,25,10" Loaded="dataGridBusiness_Loaded"/>

    </Grid>
</Window>
